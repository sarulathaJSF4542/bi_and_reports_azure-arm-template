@{
    var model = ViewBag.Permissions as Dictionary<ItemType, bool>;
    var itemType = ViewBag.ItemType;
    var itemsCount = ViewBag.ItemsCount as Dictionary<ItemType, int>;
    var fileName = itemType.ToString().ToLower() + ".svg";
    var isMobile = new DeviceDetection(Context).IsMobile;
    var displayName = Context.Session.GetString("displayname") != null ? Context.Session.GetString("displayname") : string.Empty;
    var hasDashboards = (itemsCount != null && itemsCount.ContainsKey(ItemType.Dashboard) && (itemsCount[ItemType.Dashboard] > 0));
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
}
<environment include="Development,CloudDevelopment">
<link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/default-pages.css" />
</environment>
<environment exclude="Development,CloudDevelopment">
    <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/default-pages.min.css" />
</environment>
<script>
    var dashboardItemCount = "@itemsCount[ItemType.Dashboard]";
</script>
<link href="https://fonts.googleapis.com/css?family=Bitter:400,700" rel="stylesheet">
<div class="col-xs-12 defafult-pages-container no-padding">
    <div class="default-pages">
        <img class="default-pages-dashboard-image" src="@(GlobalAppSettings.CdnDomain)/static/default-pages/v1/@fileName">
        <h1 class="default-pages-header">@(itemType == ItemType.Dashboard ? "[[[Dashboards]]]" : itemType == ItemType.Schedule ? "[[[Schedules]]]" : itemType == ItemType.Datasource ? "[[[Data Sources]]]" : "[[[Slideshow]]]")</h1>

        @if (itemType == ItemType.Dashboard)
        {
            <p class="default-pages-message">@string.Concat("[[[Welcome, ]]]", displayName, "[[[! Bring your data, choose your KPIs and go live with your dashboard in minutes.]]]")</p>
            if (!isMobile && model != null && model.ContainsKey(ItemType.Dashboard) && model[ItemType.Dashboard])
            {
                <button class="sf-primary-button" data-action="create-items">[[[Create my first Dashboard]]]</button>
                <div class="dashboard-notification">
                    <img class="stacked-column" src="@(GlobalAppSettings.CdnDomain)/static/default-pages/v1/dashboard-notification.svg">
                    <div class="dashboard-main">
                        <h2 class="default-pages-header">[[[Dashboard Samples]]]</h2>
                        <span class="notification-close su-close"></span>
                        <p class="message">[[[Explore our features and see what the application is capable of achieving with our 50+ sample dashboards.]]]</p>
                        <div class="explore">
                            <a class="sf-nav-link">
                                [[[Explore]]]
                                <span class="arrow su-arrow-right"></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else if (itemType == ItemType.Datasource)
        {
            <p class="default-pages-message">[[[Start building your dashboard by adding your first data source.]]]</p>
            if (!isMobile && model != null && model.ContainsKey(ItemType.Datasource) && model[ItemType.Datasource])
            {
                <button id="create-datasource-connection" class="sf-primary-button">[[[Create my first Data Source]]]</button>
            }
        }
        else if (itemType == ItemType.Schedule)
        {
            if (hasDashboards)
            {
                <p class="default-pages-message">[[[Schedule your dashboards to export them and send them through email.]]]</p>
            }
            else
            {
                <p class="default-pages-message">[[[Schedule your dashboards to export them and send them through email. Start building your dashboards to schedule them.]]]</p>
            }

            if (!isMobile)
            {
                if (hasDashboards)
                {
                    if (model != null && model.ContainsKey(ItemType.Schedule) && model[ItemType.Schedule])
                    {
                        <button class="sf-primary-button create-schedule">[[[Create Schedule]]]</button>
                    }
                }
                else if (model != null && model.ContainsKey(ItemType.Dashboard) && model[ItemType.Dashboard])
                {
                    <button class="sf-primary-button" data-action="create-items">[[[Create Dashboard]]]</button>
                }
            }
        }
        else if (itemType == ItemType.Slideshow)
        {
            if (hasDashboards)
            {
                <p class="default-pages-message">[[[Present dashboards in TV mode and embed them in slides.]]]</p>
            }
            else
            {
                <p class="default-pages-message">[[[Present dashboards in TV mode and by embedding them in slides. Start building your dashboards to create slideshows using them.]]]</p>
            }

            if (!isMobile)
            {
                if (hasDashboards)
                {
                    if (model != null && model.ContainsKey(ItemType.Slideshow) && model[ItemType.Slideshow])
                    {
                        <button class="sf-primary-button create-presentation">[[[Create Slideshow]]]</button>
                    }
                }
                else if (model != null && model.ContainsKey(ItemType.Dashboard) && model[ItemType.Dashboard])
                {
                    <button class="sf-primary-button" data-action="create-items">[[[Create Dashboard]]]</button>
                }
            }
        }
    </div>
</div>