@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var dashboardSecurityHelpSiteUrl= GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.PublicDashboards);
}

<!DOCTYPE html>
<head>
    <script>
        var itemSettingsAccessUrl = "@Url.Action("itemsettingsaccess", "dashboards")";
        var getItemSettingsUrl = "@Url.Action("getitemsettings", "dashboards")";
        var dashboardUrl = "@Url.Action("Dashboards", "Dashboards")";
    </script>

    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/dashboard-security.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/dashboard-security.js"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/dashboard-security.min.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/dashboard-security.min.js"></script>
    </environment>
</head>
<body>
    <div id="itemsettings-dialog-content" style="display:none">
        <span class="security-info">[[[Dashboard security options control which websites, IP addresses, and applications can access or embed the dashboard]]]. 
        @if (!@ServerAppConfig.IsHideHelpLink)
        {
            <span>[[[Learn more about dashboard security ]]] <a href="@(ServerAppConfig.AppSettings.Documentation.BaseUri + @dashboardSecurityHelpSiteUrl)" target="_blank">[[[here.]]]</a></span>
        }
        </span>
        <div class="item-settings-content-list">
            <p>[[[Accept embedding requests from these websites:]]]</p>
            <span id="domain-name-content" class="item-settings-input">
                <span id="domain-chip-content" class="item-settings-chip"></span>
                <input id="domain-input-text" autocomplete="off" class="form-control item-settings-content" placeholder="[[[Enter the list of domains separated by commas.]]]" maxlength="253" autofocus>
            </span>
            <span class="domain-name-validation" style="display:none">[[[One or more invalid domains]]]</span>
        </div>
        <div class="item-settings-content-list">
            <p>[[[Allow dashboard access from these IP addresses:]]]</p>
            <span id="ip-address-content" class="item-settings-input">
                <span id="ip-chip-content" class="item-settings-chip"></span>
                <input id="ip-input-text" autocomplete="off" class="form-control item-settings-content" placeholder="[[[Enter the list of IP addresses separated by commas.]]]" maxlength="45">
            </span>
            <span class="ip-address-validation" style="display:none">[[[One or more invalid IP addresses]]]</span>
        </div>
        <div id="item-settings-container">
            <label class="item-settings-label">[[[Apply these settings]]]</label>
            <div class="center-align">
                <div class="item-settings-dropdown">
                    <select id="select-option" class="selectpicker full-width">
                        <option value=@((int)SecuritySettingScope.Always)>[[[Always]]]</option>
                        <option value=@((int)SecuritySettingScope.Public)>[[[When the dashboard is public and accessed anonymously]]]</option>
                        <option value=@((int)SecuritySettingScope.Embedded)>[[[When the dashboard is embedded]]]</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</body>